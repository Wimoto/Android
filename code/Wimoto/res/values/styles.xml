<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="Header">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/color_header</item>
    </style>
    
    <style name="sensor_border">
		<item name="android:layout_alignParentBottom">true</item>     	
		<item name="android:adjustViewBounds">true</item>
		<item name="android:src">@drawable/border</item>     	   
    </style>
    
    <style name="sensor_logo">
		<item name="android:layout_alignParentBottom">true</item>     	
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:layout_marginRight">6dp</item> 
		<item name="android:layout_marginBottom">6dp</item> 
		<item name="android:src">@drawable/wimoto</item> 	   
    </style>

</resources>
