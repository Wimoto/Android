<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_sensor_grow" >
    
    <ImageView
        style="@style/sensor_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ImageView
        style="@style/sensor_logo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    
    <ImageView
        android:id="@+id/battery_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/battery_full" />

    <TextView
        android:id="@+id/rrsi_text"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:gravity="right|center"
        android:text="@string/sensor_rrsi"
        android:textColor="@color/color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensor_name_text"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/sensor_two_hyphens"
        android:textColor="@color/color_white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/last_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="68dp"
        android:gravity="right|center_vertical"
        android:text="@string/sensor_just_now"
        android:textColor="@color/color_white"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/light_layout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/last_updated_text"
        android:layout_marginTop="4dp" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/plant_under_sun" />
        
        <TextView
            android:id="@+id/light_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical"
            android:text="@string/sensor_two_hyphens"
            android:textColor="@color/color_white"
            android:textSize="50sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:text="@string/sensor_lux"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/light_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/light_layout"
        android:layout_marginTop="2dp" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/light_switch"
            android:src="@drawable/alarm_clock_white" />

        <com.marknicholas.wimoto.widgets.AnimationSwitch
            android:id="@+id/light_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:clickable="true" 
            android:checked="true"
            android:layout_toLeftOf="@+id/light_hi" />

        <TextView
            android:id="@+id/light_hi"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/light_lo"
            android:gravity="center"
            android:text="@string/sensor_hi"
            android:textColor="@color/color_black"
            android:textSize="17sp" />
        
        <TextView
            android:id="@+id/light_lo"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/sensor_lo"
            android:textColor="@color/color_black"
            android:textSize="17sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/moisture_layout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/light_alarm_layout"
        android:layout_marginTop="4dp" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/plant_under_rain" />
        
        <TextView
            android:id="@+id/moisture_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical"
            android:text="@string/sensor_two_hyphens"
            android:textColor="@color/color_white"
            android:textSize="50sp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/moisture_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/moisture_layout"
        android:layout_marginTop="2dp" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/moisture_switch"
            android:src="@drawable/alarm_clock_white" />

        <com.marknicholas.wimoto.widgets.AnimationSwitch
            android:id="@+id/moisture_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:clickable="true" 
            android:layout_toLeftOf="@+id/moisture_hi" />

        <TextView
            android:id="@+id/moisture_hi"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/moisture_lo"
            android:gravity="center"
            android:text="@string/sensor_hi"
            android:textColor="@color/color_black"
            android:textSize="17sp" />
        
        <TextView
            android:id="@+id/moisture_lo"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/sensor_lo"
            android:textColor="@color/color_black"
            android:textSize="17sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/temperature_layout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/moisture_alarm_layout"
        android:layout_marginTop="4dp" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/plant_temperature" />
        
        <TextView
            android:id="@+id/temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical"
            android:text="@string/sensor_two_hyphens"
            android:textColor="@color/color_white"
            android:textSize="50sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:text="@string/sensor_celsius"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/temperature_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/temperature_layout"
        android:layout_marginTop="2dp" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/temperature_switch"
            android:src="@drawable/alarm_clock_white" />

        <com.marknicholas.wimoto.widgets.AnimationSwitch
            android:id="@+id/temperature_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:clickable="true" 
            android:layout_toLeftOf="@+id/temperature_hi" />

        <TextView
            android:id="@+id/temperature_hi"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/temperature_lo"
            android:gravity="center"
            android:text="@string/sensor_hi"
            android:textColor="@color/color_black"
            android:textSize="17sp" />
        
        <TextView
            android:id="@+id/temperature_lo"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/sensor_lo"
            android:textColor="@color/color_black"
            android:textSize="17sp" />
    </RelativeLayout>
    
    

</RelativeLayout>
