<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_sensor_water" >

    <ImageView
        style="@style/sensor_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        style="@style/sensor_logo"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/battery_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/battery_full" />

    <TextView
        android:id="@+id/rrsi_text"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:gravity="right|center"
        android:textColor="@color/color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensor_name_text"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/sensor_two_hyphens"
        android:textColor="@color/color_white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/last_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="68dp"
        android:gravity="right|center_vertical"
        android:text="@string/sensor_just_now"
        android:textColor="@color/color_white"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/contact_layout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/last_updated_text"
        android:layout_marginTop="8dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/droplet" />

        <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:gravity="right|center_vertical"
            android:text="@string/sensor_two_hyphens"
            android:textColor="@color/color_white"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tempareture_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contact_layout"
        android:layout_marginTop="2dp" >

        <com.marknicholas.wimoto.widgets.AnimationSwitch
            android:id="@+id/contact_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true" 
            android:checked="true"
            android:layout_marginRight="28dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/contact_switch"
            android:src="@drawable/alarm_clock_white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/level_layout"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_below="@+id/tempareture_alarm_layout"
        android:layout_marginTop="36dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/droplet" />

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:gravity="right|center_vertical"
            android:text="@string/sensor_two_hyphens"
            android:textColor="@color/color_white"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="@string/sensor_cm"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/level_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/level_layout"
        android:layout_marginTop="2dp" >

        <com.marknicholas.wimoto.widgets.AnimationSwitch
            android:id="@+id/level_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true" 
            android:layout_marginRight="28dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/level_switch"
            android:src="@drawable/alarm_clock_white" />
    </RelativeLayout>

</RelativeLayout>