<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_sensor_sentry" 
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

     	<include
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	layout="@layout/sensor_screen_header" />

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_marginTop="15dp"
                 android:layout_weight="1"
                 android:orientation="vertical" >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" >
                     
                     <ImageView
	                    android:layout_width="32dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top"
	                    android:adjustViewBounds="true"
	                    android:src="@drawable/plant_under_rain" />
	                
	                <com.wimoto.app.widgets.sparkline.LineSparkView
	                    android:id="@+id/accelerometerSparkView"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_gravity="center"
	                    android:layout_marginLeft="5dp"
	                    android:layout_weight="1" />
	                
	                <TextView
	            		android:id="@+id/temperatureTextView"
	            		android:layout_width="wrap_content"
	           	 		android:layout_height="wrap_content"
	           	 		android:layout_marginLeft="5dp"
	           	 		android:layout_gravity="center"
	            		android:text="@string/sensor_two_hyphens"
	            		android:textColor="@color/color_white"
	            		android:textSize="50sp" />
	        
	        		<TextView
	            		android:layout_width="wrap_content"
	            		android:layout_height="wrap_content"
	            		android:layout_marginLeft="5dp"
	            		android:layout_gravity="top"
	            		android:text="@string/sensor_celsius"
	            		android:textColor="@color/color_white"
	            		android:textSize="24sp" />
                     
                 </LinearLayout>

                 <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:layout_gravity="right"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:layout_width="32dp"
	                    android:layout_height="32dp"
	                    android:layout_gravity="center"
	                    android:src="@drawable/alarm_clock_white" />
	                
	                <com.wimoto.app.widgets.AnimationSwitch
	                    android:id="@+id/temperature_switch"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center"
	                    android:layout_marginLeft="5dp"
	                    android:checked="true"
	                    android:clickable="true" />
	
	            </LinearLayout>        

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_marginTop="15dp"
                 android:layout_weight="1"
                 android:orientation="vertical" >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" >
	                
                     <ImageView
	                    android:layout_width="32dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top"
	                    android:adjustViewBounds="true"
	                    android:src="@drawable/motion_detector" />
	                
	                <com.wimoto.app.widgets.sparkline.LineSparkView
	                    android:id="@+id/infaredSparkView"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_gravity="center"
	                    android:layout_marginLeft="5dp"
	                    android:layout_weight="1" />
	                
	                <TextView
	            		android:id="@+id/humidityTextView"
	            		android:layout_width="wrap_content"
	           	 		android:layout_height="wrap_content"
	           	 		android:layout_marginLeft="5dp"
	           	 		android:layout_gravity="center"
	            		android:text="@string/sensor_two_hyphens"
	            		android:textColor="@color/color_white"
	            		android:textSize="50sp" />
	        
	        		<TextView
	            		android:layout_width="25dp"
	            		android:layout_height="wrap_content"
	            		android:layout_marginLeft="5dp"
	            		android:layout_gravity="top"
	            		android:text="@string/sensor_empty"
	            		android:textColor="@color/color_white"
	            		android:textSize="24sp" />
                     
                 </LinearLayout>

                 <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:layout_gravity="right"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:layout_width="32dp"
	                    android:layout_height="32dp"
	                    android:layout_gravity="center"
	                    android:src="@drawable/alarm_clock_white" />
	                
	                <com.wimoto.app.widgets.AnimationSwitch
	                    android:id="@+id/humidity_switch"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center"
	                    android:layout_marginLeft="5dp"
	                    android:checked="true"
	                    android:clickable="true" />
	
	            </LinearLayout>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_marginTop="15dp"
                 android:layout_weight="1"
                 android:orientation="vertical" >
             </LinearLayout>

         </LinearLayout>

    </LinearLayout>
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/sensor_screen_footer" />

</LinearLayout>